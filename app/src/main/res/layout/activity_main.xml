<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#101318">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESP32 Weather Monitor"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live temperature &amp; humidity from your ESP32"
            android:textColor="#A0A7B8"
            android:textSize="13sp"
            android:layout_marginTop="4dp" />

        <!-- IP + Refresh row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/ipInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="ESP32 IP (e.g. 192.168.0.151)"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="#1E2430"
                android:textColor="#FFFFFF"
                android:textColorHint="#6C7385"
                android:singleLine="true" />

            <Button
                android:id="@+id/refreshBtn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:text="Refresh"
                android:backgroundTint="#3D7BFF"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Auto refresh toggle -->
        <CheckBox
            android:id="@+id/autoRefreshCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Auto-refresh every 10 seconds"
            android:textColor="#D0D4E2" />

        <!-- Big weather card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="20dp"
            app:cardBackgroundColor="#1A2233"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Temp row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tempText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temp: -- °C"
                        android:textColor="#FFFFFF"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/weatherIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="☀"
                        android:textSize="28sp"
                        android:layout_marginStart="12dp"
                        android:textColor="#FFD54F" />
                </LinearLayout>

                <!-- Humidity -->
                <TextView
                    android:id="@+id/humText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Humidity: -- %"
                    android:textColor="#C4C9D8"
                    android:textSize="18sp" />

                <!-- Last updated -->
                <TextView
                    android:id="@+id/lastUpdatedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Last updated: --"
                    android:textColor="#8F96A8"
                    android:textSize="13sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Status message -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="#FFB74D"
            android:textSize="13sp" />

    </LinearLayout>
</ScrollView>
